{%- style -%}
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height);
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    z-index: 100;
    transition: all var(--transition-duration) var(--transition-timing);
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  .header--hidden {
    transform: translateY(-100%);
  }

  .header__container {
    height: 100%;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 0 var(--container-padding);
    max-width: var(--container-max-width);
    margin: 0 auto;
  }

  .header__logo {
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    font-weight: 700;
    text-decoration: none;
    color: var(--color-text);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    justify-self: start;
  }

  .header__logo-urdu {
    font-family: var(--font-urdu);
    font-size: 1.2em;
  }

  .header__nav {
    display: flex;
    align-items: center;
    gap: clamp(1.5rem, 3vw, 2.5rem);
    justify-self: center;
  }

  .header__nav-link {
    font-size: clamp(0.875rem, 2vw, 1rem);
    text-decoration: none;
    color: var(--color-text);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
    transition: color var(--transition-duration) var(--transition-timing);
    position: relative;
  }

  .header__nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background: currentColor;
    transition: width var(--transition-duration) var(--transition-timing);
  }

  .header__nav-link:hover::after {
    width: 100%;
  }

  .header__icons {
    display: flex;
    align-items: center;
    gap: clamp(1rem, 2vw, 1.5rem);
    justify-self: end;
  }

  .header__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: clamp(2rem, 4vw, 2.5rem);
    height: clamp(2rem, 4vw, 2.5rem);
    color: var(--color-text);
    text-decoration: none;
    transition: all var(--transition-duration) var(--transition-timing);
    position: relative;
  }

  .header__icon:hover {
    transform: translateY(-1px);
  }

  .header__mobile-menu-button {
    display: none;
    background: none;
    border: none;
    padding: var(--spacing-xs);
    cursor: pointer;
    color: var(--color-text);
    width: 24px;
    height: 24px;
    position: relative;
  }

  .header__mobile-menu-button span,
  .header__mobile-menu-button span::before,
  .header__mobile-menu-button span::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 1px;
    background: currentColor;
    transition: all var(--transition-duration) var(--transition-timing);
  }

  .header__mobile-menu-button span {
    top: 50%;
    transform: translateY(-50%);
  }

  .header__mobile-menu-button span::before {
    top: -6px;
  }

  .header__mobile-menu-button span::after {
    bottom: -6px;
  }

  .header__mobile-menu-button[aria-expanded="true"] span {
    background: transparent;
  }

  .header__mobile-menu-button[aria-expanded="true"] span::before {
    transform: rotate(45deg);
    top: 0;
  }

  .header__mobile-menu-button[aria-expanded="true"] span::after {
    transform: rotate(-45deg);
    bottom: 0;
  }

  @media screen and (max-width: 768px) {
    .header__container {
      grid-template-columns: auto 1fr auto;
      gap: 1rem;
    }

    .header__nav {
      position: fixed;
      top: var(--header-height);
      left: 0;
      width: 100%;
      height: calc(100vh - var(--header-height));
      background: var(--color-background);
      flex-direction: column;
      padding: var(--spacing-xl);
      transform: translateX(-100%);
      transition: transform var(--transition-duration) var(--transition-timing);
      justify-content: center;
    }

    .header__nav.is-active {
      transform: translateX(0);
    }

    .header__mobile-menu-button {
      display: block;
    }

    .header__nav-link {
      font-size: 1.5rem;
      padding: 0.5rem 0;
    }

    .header__nav-link::after {
      bottom: 0;
    }
  }
{%- endstyle -%}

<header class="header" data-header>
  <div class="header__container">
    <a href="/" class="header__logo">
      <span class="header__logo-urdu">فیصلہ</span>
      <span>FAESLE</span>
    </a>

    <button class="header__mobile-menu-button" aria-label="Toggle menu" data-mobile-menu-button aria-expanded="false">
      <span></span>
    </button>

    <nav class="header__nav" data-nav>
      {%- for link in section.settings.menu.links -%}
        <a href="{{ link.url }}" class="header__nav-link">{{ link.title }}</a>
      {%- endfor -%}
    </nav>

    <div class="header__icons">
      <button class="header__icon" aria-label="Search" data-search-button>
        {% render 'icon-search' %}
      </button>
      <a href="/cart" class="header__icon" aria-label="Cart">
        {% render 'icon-cart' %}
        <span class="visually-hidden">Cart</span>
      </a>
    </div>
  </div>
</header>

<div class="cart-drawer" data-cart-drawer>
  <div class="cart-drawer__header">
    <h2>Your Cart</h2>
    <button class="cart-drawer__close" data-cart-close>
      {% render 'icon-close' %}
    </button>
  </div>
  <div class="cart-drawer__content">
    {% render 'cart-items' %}
  </div>
</div>

<script>
  class Header {
    constructor() {
      this.header = document.querySelector('[data-header]');
      this.lastScroll = 0;
      this.cartDrawer = document.querySelector('[data-cart-drawer]');
      this.cartToggle = document.querySelector('[data-cart-toggle]');
      this.cartClose = document.querySelector('[data-cart-close]');
      
      this.init();
    }

    init() {
      window.addEventListener('scroll', this.handleScroll.bind(this));
      this.cartToggle?.addEventListener('click', this.toggleCart.bind(this));
      this.cartClose?.addEventListener('click', this.toggleCart.bind(this));
    }

    handleScroll() {
      const currentScroll = window.pageYOffset;
      
      if (currentScroll <= 0) {
        this.header.classList.remove('header--hidden');
        return;
      }
      
      if (currentScroll > this.lastScroll && !this.header.classList.contains('header--hidden')) {
        this.header.classList.add('header--hidden');
      } else if (currentScroll < this.lastScroll && this.header.classList.contains('header--hidden')) {
        this.header.classList.remove('header--hidden');
      }
      
      this.lastScroll = currentScroll;
    }

    toggleCart() {
      this.cartDrawer.classList.toggle('cart-drawer--open');
      document.body.style.overflow = this.cartDrawer.classList.contains('cart-drawer--open') ? 'hidden' : '';
    }
  }

  new Header();
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
