{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FAESLE"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "DECISIONS"
    },
    {
      "type": "text",
      "id": "urdu_text",
      "label": "Urdu Text",
      "default": "فیصلے"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "SHOP NOW"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="hero-section">
  <div class="gradient-bg"></div>
  <div class="hero-content">
    <h1 class="hero-heading">
      <span class="english-text">{{ section.settings.heading }}</span>
      <span class="urdu-text">{{ section.settings.urdu_text }}</span>
    </h1>
    <p class="hero-subheading">{{ section.settings.subheading }}</p>
    <a href="/collections/all" class="cta-button">{{ section.settings.cta_text }}</a>
  </div>
</div>

<style>
html, body {
  margin: 0 !important;
  padding: 0 !important;
  box-sizing: border-box;
}
.hero-section {
  position: relative;
  height: 100vh;
  width: 100vw;
  left: 50%;
  right: 50%;
  margin-left: -50vw;
  margin-right: -50vw;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  box-sizing: border-box;
}
.gradient-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, #000000, #1a1a1a, #333333, #1a1a1a, #000000);
  background-size: 400% 400%;
  animation: gradient 15s ease infinite;
  z-index: -1;
}
@keyframes gradient {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}
.hero-content {
  text-align: center;
  z-index: 1;
}
.hero-heading {
  font-size: 8rem;
  font-weight: 900;
  margin: 0;
  line-height: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.english-text {
  font-family: var(--font-english);
  letter-spacing: 0.2em;
}
.urdu-text {
  font-family: var(--font-urdu);
  font-size: 6rem;
  margin-top: 1rem;
}
.hero-subheading {
  font-size: 1.5rem;
  margin: 2rem 0;
  letter-spacing: 0.1em;
  text-transform: uppercase;
}
.cta-button {
  display: inline-block;
  padding: 1rem 3rem;
  border: 2px solid #ffffff;
  color: #ffffff;
  text-decoration: none;
  font-size: 1.2rem;
  letter-spacing: 0.1em;
  transition: all 0.3s ease;
}
.cta-button:hover {
  background: #ffffff;
  color: #000000;
}
@media screen and (max-width: 768px) {
  .hero-heading { font-size: 4rem; }
  .urdu-text { font-size: 3rem; }
  .hero-subheading { font-size: 1.2rem; }
}
</style> 