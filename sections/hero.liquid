{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our collection of premium oversized t-shirts"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}

<section class="hero-section-modern">
  {% if section.settings.image %}
    <div class="hero-image-modern">
      {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'hero-bg-image' }}
    </div>
  {% endif %}

  <div class="hero-overlay">
    <div class="hero-text-modern">
      <h1 class="hero-heading-modern">
        <span>{{ section.settings.heading }}</span>
        <img src="{{ 'faselelogo.png' | asset_url }}" alt="Fasele" class="hero-logo-modern" width="400" height="100">
      </h1>

      <p class="hero-subheading-modern">{{ section.settings.subheading }}</p>

      <div class="hero-cta-modern">
        <a href="/collections/all" class="cta-button-modern">
          {{ section.settings.cta_text }}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
.hero-section-modern {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000; /* fallback */
}

.hero-image-modern {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.hero-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  filter: brightness(0.85);
  transition: transform 0.8s ease;
}

.hero-section-modern:hover .hero-bg-image {
  transform: scale(1.05);
}

.hero-overlay {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.4); /* semi-transparent overlay */
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
}

.hero-text-modern {
  text-align: center;
  color: #fff;
  max-width: 800px;
}

.hero-heading-modern {
  font-size: clamp(2rem, 6vw, 5rem);
  font-weight: 700;
  margin-bottom: 1rem;
  line-height: 1.1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.hero-logo-modern {
  max-width: 250px;
  height: auto;
}

.hero-subheading-modern {
  font-size: 1.25rem;
  font-weight: 400;
  color: #f0f0f0;
  margin-bottom: 2rem;
  line-height: 1.5;
}

.hero-cta-modern {
  display: flex;
  justify-content: center;
}

.cta-button-modern {
  display: inline-block;
  padding: 1rem 2.5rem;
  background: #fff;
  color: #000;
  font-size: 1rem;
  font-weight: 600;
  text-decoration: none;
  border-radius: 50px;
  transition: all 0.3s ease;
  box-shadow: 0 10px 25px rgba(0,0,0,0.2);
}

.cta-button-modern:hover {
  background: #000;
  color: #fff;
  border: 1px solid #fff;
}

@media (max-width: 768px) {
  .hero-text-modern {
    padding: 1rem;
  }

  .hero-subheading-modern {
    font-size: 1rem;
  }

  .cta-button-modern {
    padding: 0.75rem 2rem;
    font-size: 0.95rem;
  }
}
</style>
