{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our collection of premium oversized t-shirts"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}

<section class="hero-section">
  <div class="hero-container">
    <div class="hero-text-content">
      <h1 class="hero-heading">
        <span class="hero-heading-main">{{ section.settings.heading }}</span>
      <img src="{{ 'faselelogo.png' | asset_url }}" alt="Faesle" class="hero-logo" width="400" height="100">
      </h1>
      
      <p class="hero-subheading">{{ section.settings.subheading }}</p>
      
      <div class="hero-cta-buttons">
        <a href="/collections/all" class="cta-button">
          <span>{{ section.settings.cta_text }}</span>
        </a>
      </div>
    </div>

    {% if section.settings.image %}
      <div class="hero-image-container">
        {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'hero-image' }}
      </div>
    {% endif %}
  </div>
</section>

<style>
.hero-section {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 2rem 1rem;
  background-color: #fff;
  overflow: hidden;
}

.hero-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  max-width: 1600px;
  width: 100%;
  align-items: center;
  text-align: center;
}

.hero-text-content {
  padding: 1rem;
  text-align: center;
}

.hero-heading {
  margin-bottom: 2rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hero-logo {
  max-width: 400px;
  width: 100%;
  height: auto;
  margin-bottom: 1rem;
}

.hero-heading-main {
  display: block;
  font-size: clamp(2rem, 5vw, 3rem);
  color: #f0f0f0;
  -webkit-text-stroke: 1px #000;
  line-height: 1.2;
  text-align: center;
}

.hero-subheading {
  font-size: 1.25rem;
  color: #333;
  max-width: 500px;
  margin: 1rem auto 2rem;
  position: relative;
  padding: 0 2rem;
  font-style: italic;
  line-height: 1.6;
}

.hero-tagline {
  font-size: 1.125rem;
  color: #666;
  max-width: 400px;
  margin: 0 auto 2rem;
  font-weight: 500;
  letter-spacing: 0.05em;
  text-transform: uppercase;
}

.hero-subheading::before {
  content: '';
  position: absolute;
  left: 50%;
  top: -1rem;
  width: 2rem;
  height: 1px;
  background: #000;
  transform: translateX(-50%);
}

.hero-cta-buttons {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 1rem;
}

.cta-button {
  padding: 1rem 2rem;
  background: #000;
  color: #fff;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 500;
  border: 1px solid #000;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.cta-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  transform: translateX(-100%);
  transition: transform 0.3s ease;
}

.cta-button:hover::before {
  transform: translateX(0);
}

.cta-button span {
  position: relative;
  z-index: 1;
  color: #fff;
}

.cta-button:hover span {
  color: #000;
}

.cta-button.secondary {
  background: transparent;
  color: #000;
}

.cta-button.secondary span {
  color: #000;
}

.cta-button.secondary:hover {
  background: #000;
}

.cta-button.secondary:hover span {
  color: #fff;
}

.hero-image-container {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.hero-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  transition: transform 0.5s ease;
}

.hero-image-container::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, #fff 0%, transparent 20%);
}

@media (max-width: 768px) {
  .hero-text-content {
    text-align: center;
  }

  .hero-subheading {
    padding: 0 1rem;
  }

  .hero-subheading::before {
    display: block;
  }

  .hero-cta-buttons {
    justify-content: center;
  }

  .hero-image-container {
    height: 50vh;
  }

  .hero-image-container::after {
    background: linear-gradient(to bottom, #fff 0%, transparent 20%);
  }
}
</style>
