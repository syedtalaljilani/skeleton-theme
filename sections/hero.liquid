{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to"
    },
    {
      "type": "text",
      "id": "urdu_text",
      "label": "Urdu Text",
      "default": "فیصلہ"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our collection of premium products"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}

<section class="hero-section">
  <div class="hero-container">
    <div class="hero-text-content">
      <h1 class="hero-heading">
        <span class="hero-heading-main">{{ section.settings.heading }}</span>
        <span class="hero-heading-urdu">{{ section.settings.urdu_text }}</span>
      </h1>
      <p class="hero-subheading">{{ section.settings.subheading }}</p>
      <div class="hero-cta-buttons">
        <a href="/collections/all" class="cta-button">{{ section.settings.cta_text }}</a>
        <a href="/pages/about" class="cta-button secondary">Learn More</a>
      </div>
    </div>

    {% if section.settings.image %}
      <div class="hero-image-container">
        {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'hero-image' }}
      </div>
    {% endif %}
  </div>
</section>

<style>
.hero-section {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 2rem 1rem;
  background-color: #fff;
  overflow: hidden;
}

.hero-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  max-width: 1600px;
  width: 100%;
  align-items: center;
}

.hero-text-content {
  padding: 1rem;
  text-align: left;
}

.hero-heading {
  margin-bottom: 2rem;
}

.hero-heading-main {
  display: block;
  font-size: clamp(3rem, 8vw, 6rem);
  color: #f0f0f0;
  -webkit-text-stroke: 1px #000;
  line-height: 0.85;
}

.hero-heading-urdu {
  display: block;
  font-size: clamp(5rem, 10vw, 10rem);
  color: #000;
  line-height: 0.85;
}

.hero-subheading {
  font-size: 1.25rem;
  color: #333;
  max-width: 500px;
  margin: 1rem 0 2rem;
  position: relative;
  padding-left: 2rem;
}

.hero-subheading::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  width: 1.5rem;
  height: 1px;
  background: #000;
  transform: translateY(-50%);
}

.hero-cta-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.cta-button {
  padding: 1rem 2rem;
  background: #000;
  color: #fff;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 500;
  border: 1px solid #000;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.cta-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  transform: translateX(-100%);
  transition: transform 0.3s ease;
}

.cta-button:hover::before {
  transform: translateX(0);
}

.cta-button span,
.cta-button.secondary:hover {
  color: #000;
}

.cta-button.secondary {
  background: transparent;
  color: #000;
}

.hero-image-container {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.hero-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  transition: transform 0.5s ease;
}

.hero-image-container::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, #fff 0%, transparent 20%);
}

@media (max-width: 768px) {
  .hero-text-content {
    text-align: center;
  }

  .hero-subheading {
    padding-left: 0;
  }

  .hero-subheading::before {
    display: none;
  }

  .hero-cta-buttons {
    justify-content: center;
  }

  .hero-image-container {
    height: 50vh;
  }

  .hero-image-container::after {
    background: linear-gradient(to bottom, #fff 0%, transparent 20%);
  }
}
</style>
