{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our collection of premium oversized t-shirts"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}

<section class="hero-section">
  <div class="hero-container">
    <div class="hero-text-content">
      <h1 class="hero-heading">
        <span class="hero-heading-main">{{ section.settings.heading }}</span>
      <img src="{{ 'faselelogo.png' | asset_url }}" alt="Faesle" class="hero-logo" width="400" height="100">
      </h1>
      
      <p class="hero-subheading">{{ section.settings.subheading }}</p>
      
      <div class="hero-cta-buttons">
        <a href="/collections/all" class="cta-button">
          <span>{{ section.settings.cta_text }}</span>
        </a>
      </div>
    </div>

    {% if section.settings.image %}
      <div class="hero-image-container">
        {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'hero-image' }}
      </div>
    {% endif %}
  </div>
</section>

<style>
.hero-section {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: #fff;
}

.hero-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  max-width: 1400px;
  width: 100%;
  align-items: center;
  gap: 2rem;
  padding: 0 1rem;
}

.hero-text-content {
  text-align: center;
}

.hero-heading {
  margin-bottom: 1rem;
}

.hero-logo {
  max-width: 300px;
  width: 100%;
  height: auto;
  margin: 0 auto 1rem;
}

.hero-heading-main {
  font-size: clamp(2.5rem, 5vw, 4rem);
  color: #000;
  line-height: 1.2;
  font-weight: 500;
}

.hero-subheading {
  font-size: 1.25rem;
  color: #666;
  max-width: 400px;
  margin: 1rem auto;
  line-height: 1.5;
}

.hero-cta-buttons {
  margin-top: 2rem;
}

.cta-button {
  display: inline-block;
  padding: 1rem 2rem;
  background: #000;
  color: #fff;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 500;
  border: 1px solid #000;
  transition: all 0.3s ease;
}

.cta-button:hover {
  background: #fff;
  color: #000;
}

.hero-image-container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.hero-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

@media (max-width: 768px) {
  .hero-container {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .hero-image-container {
    height: 50vh;
  }
}
</style>
