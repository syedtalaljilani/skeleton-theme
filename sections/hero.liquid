{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Introducing"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our new collection of premium oversized t-shirts"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Alfaz Collection"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}

<section class="hero-section-modern">
  {% if section.settings.image %}
    <div class="hero-image-modern">
      {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'hero-bg-image' }}
    </div>
  {% endif %}

  <div class="hero-overlay">
    <div class="hero-text-modern">
      <div class="hero-content-wrapper">
        <h1 class="hero-heading-modern">
          <span class="intro-text">{{ section.settings.heading }}</span>
          <span class="collection-name">Alfaz</span>
          <div class="brand-section">
            <span class="by-text">by</span>
            <img src="{{ 'faselelogo.png' | asset_url }}" alt="Fasele" class="hero-logo-modern" width="400" height="100">
          </div>
        </h1>

        <p class="hero-subheading-modern">{{ section.settings.subheading }}</p>

        <div class="hero-cta-modern">
          <a href="/collections/alfaz" class="cta-button-modern">
            {{ section.settings.cta_text }}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.hero-section-modern {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #000 0%, #111 100%);
}

.hero-image-modern {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.hero-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  filter: brightness(0.7) contrast(1.1);
  transition: transform 1.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.hero-section-modern:hover .hero-bg-image {
  transform: scale(1.1);
}

.hero-overlay {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.4) 100%);
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 2rem;
}

.hero-text-modern {
  text-align: left;
  color: #fff;
  max-width: 800px;
  margin-left: 10%;
  text-shadow: 0 2px 4px rgba(0,0,0,0.2);
}

.hero-content-wrapper {
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 1s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.hero-heading-modern {
  font-size: clamp(2rem, 6vw, 5rem);
  font-weight: 700;
  margin-bottom: 2rem;
  line-height: 1.1;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.intro-text {
  font-size: 1.5rem;
  font-weight: 400;
  color: #ccc;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  margin-bottom: 1rem;
}

.collection-name {
  font-size: clamp(4rem, 10vw, 8rem);
  font-weight: 800;
  letter-spacing: -0.02em;
  background: linear-gradient(45deg, #fff 0%, #ccc 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 2px 10px rgba(255,255,255,0.1);
  margin: 1rem 0;
  line-height: 0.9;
}

.brand-section {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-top: 1rem;
}

.by-text {
  font-size: 1.5rem;
  font-weight: 400;
  color: #fff;
}

.hero-logo-modern {
  max-width: 180px;
  height: auto;
  filter: drop-shadow(0 2px 8px rgba(255,255,255,0.2));
  transition: transform 0.3s ease;
}

.hero-logo-modern:hover {
  transform: scale(1.05);
}

.hero-subheading-modern {
  font-size: 1.5rem;
  font-weight: 300;
  color: #e0e0e0;
  margin: 2rem 0;
  line-height: 1.6;
  max-width: 600px;
}

.hero-cta-modern {
  display: flex;
  justify-content: flex-start;
}

.cta-button-modern {
  display: inline-block;
  padding: 1.2rem 3rem;
  background: transparent;
  color: #fff;
  font-size: 1.1rem;
  font-weight: 600;
  text-decoration: none;
  border-radius: 50px;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2px solid #fff;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  position: relative;
  overflow: hidden;
}

.cta-button-modern::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  transform: translateX(-100%);
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: -1;
}

.cta-button-modern:hover {
  color: #000;
  transform: translateY(-2px);
}

.cta-button-modern:hover::before {
  transform: translateX(0);
}

.cta-button-modern:hover:active {
  transform: translateY(0);
}

@media (max-width: 768px) {
  .hero-text-modern {
    margin-left: 5%;
    text-align: center;
  }

  .hero-overlay {
    justify-content: center;
  }

  .hero-cta-modern {
    justify-content: center;
  }

  .hero-subheading-modern {
    font-size: 1.25rem;
  }

  .cta-button-modern {
    padding: 1rem 2.5rem;
    font-size: 1rem;
  }

  .brand-section {
    justify-content: center;
  }
}
</style>
