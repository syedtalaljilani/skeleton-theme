{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to"
    },
    {
      "type": "text",
      "id": "urdu_text",
      "label": "Main Text",
      "default": "Faesle"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our collection of premium products"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}

<section class="hero-section">
  <div class="hero-container">
    <div class="hero-text-content">
      <h1 class="hero-heading">
        <span class="hero-heading-main">Welcome to</span>
        <span class="hero-heading-urdu">Faesle</span>
      </h1>
      <p class="hero-subheading">{{ section.settings.subheading }}</p>
      <div class="hero-cta-buttons">
        <a href="/collections/all" class="cta-button">{{ section.settings.cta_text }}</a>
        <a href="/pages/about" class="cta-button secondary">Learn More</a>
      </div>
    </div>

    {% if section.settings.image %}
      <div class="hero-image-container">
        {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'hero-image' }}
      </div>
    {% endif %}
  </div>
</section>

<style>
.hero-section {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 4rem 2rem;
  background: linear-gradient(135deg, #f8f8f8 0%, #ffffff 50%, #f8f8f8 100%);
  overflow: hidden;
}

.hero-container {
  position: relative;
  display: grid;
  grid-template-columns: 1fr;
  gap: 4rem;
  max-width: 1400px;
  width: 100%;
  text-align: center;
  align-items: center;
}

.hero-text-content {
  position: relative;
  z-index: 2;
  max-width: 800px;
  margin: 0 auto;
}

.hero-heading {
  margin-bottom: 3rem;
}

.hero-heading-main {
  display: block;
  font-family: var(--font-secondary);
  font-size: clamp(4rem, 10vw, 8rem);
  color: #f0f0f0;
  -webkit-text-stroke: 1px #000;
  line-height: 0.85;
  margin-bottom: 1rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.hero-heading-urdu {
  display: block;
  font-family: var(--font-primary);
  font-size: clamp(6rem, 15vw, 12rem);
  color: #000;
  line-height: 0.85;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.hero-subheading {
  font-size: clamp(1.25rem, 2vw, 1.75rem);
  color: #333;
  max-width: 600px;
  margin: 2rem auto;
  line-height: 1.5;
  position: relative;
  padding: 0 2rem;
}

.hero-subheading::before,
.hero-subheading::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 2rem;
  height: 1px;
  background: #000;
  transform: translateY(-50%);
}

.hero-subheading::before {
  left: 0;
}

.hero-subheading::after {
  right: 0;
}

.hero-cta-buttons {
  display: flex;
  justify-content: center;
  gap: 2rem;
  margin-top: 3rem;
}

.cta-button {
  padding: 1.25rem 3rem;
  background: #000;
  color: #fff;
  text-decoration: none;
  font-size: 1.125rem;
  font-weight: 500;
  border: 1px solid #000;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.cta-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  transform: translateX(-100%);
  transition: transform 0.3s ease;
}

.cta-button:hover::before {
  transform: translateX(0);
}

.cta-button span {
  position: relative;
  z-index: 1;
}

.cta-button:hover span {
  color: #000;
}

.cta-button.secondary {
  background: transparent;
  color: #000;
}

.cta-button.secondary:hover {
  background: #000;
  color: #fff;
}

.hero-image-container {
  position: relative;
  width: 100%;
  max-width: 1000px;
  margin: 0 auto;
  aspect-ratio: 16/9;
  overflow: hidden;
  border-radius: 1rem;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

.hero-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.hero-image-container:hover .hero-image {
  transform: scale(1.05);
}

@media (max-width: 768px) {
  .hero-section {
    padding: 2rem 1rem;
  }

  .hero-container {
    gap: 2rem;
  }

  .hero-heading-main {
    font-size: clamp(3rem, 8vw, 6rem);
  }

  .hero-heading-urdu {
    font-size: clamp(4rem, 12vw, 8rem);
  }

  .hero-subheading {
    font-size: clamp(1.125rem, 1.5vw, 1.5rem);
    padding: 0 1rem;
  }

  .hero-cta-buttons {
    flex-direction: column;
    gap: 1rem;
  }

  .cta-button {
    width: 100%;
    text-align: center;
  }
}
</style>
