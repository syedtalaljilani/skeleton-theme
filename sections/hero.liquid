{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to"
    },
    {
      "type": "text",
      "id": "urdu_text",
      "label": "Urdu Text",
      "default": "فیصلہ"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our collection of premium products"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}

<div class="hero-section">
  <div class="hero-content">
    <div class="hero-text">
      <div class="hero-heading">
        <span class="urdu-text">{{ section.settings.heading }}</span>
        <span class="urdu-text">{{ section.settings.urdu_text }}</span>
      </div>
      <p class="hero-subheading">{{ section.settings.subheading }}</p>
      <div class="hero-cta">
        <a href="/collections/all" class="cta-button">{{ section.settings.cta_text }}</a>
        <a href="/pages/about" class="cta-button secondary">Learn More</a>
      </div>
    </div>
    <div class="hero-image">
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 1000 | image_tag }}
      {% endif %}
    </div>
  </div>
</div>

<style>
html, body {
  margin: 0 !important;
  padding: 0 !important;
  box-sizing: border-box;
}

.hero-section {
  position: relative;
  min-height: 100vh;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rem 2rem;
  background: linear-gradient(to bottom, #f8f8f8, #ffffff);
}

.gradient-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, #000000, #1a1a1a, #333333, #1a1a1a, #000000);
  background-size: 400% 400%;
  animation: gradient 15s ease infinite;
  z-index: -1;
}

@keyframes gradient {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.hero-content {
  position: relative;
  z-index: 2;
  text-align: left;
  max-width: 1400px;
  width: 100%;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.hero-text {
  display: flex;
  flex-direction: column;
  gap: 3rem;
}

.hero-heading {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.urdu-text {
  font-family: var(--font-primary);
  font-size: clamp(5rem, 12vw, 9rem);
  line-height: 0.9;
  display: block;
  color: #000;
  opacity: 0.95;
}

.hero-subheading {
  font-family: var(--font-primary);
  font-size: clamp(1.75rem, 3vw, 2.25rem);
  line-height: 1.3;
  color: #333;
  max-width: 600px;
}

.hero-cta {
  display: flex;
  gap: 1.5rem;
  align-items: center;
}

.cta-button {
  font-family: var(--font-secondary);
  display: inline-block;
  padding: 1.5rem 3.5rem;
  background: #000;
  color: #fff;
  text-decoration: none;
  font-size: 1.125rem;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 1px solid #000;
}

.cta-button:hover {
  background: transparent;
  color: #000;
}

.cta-button.secondary {
  background: transparent;
  color: #000;
  border: 1px solid #000;
}

.cta-button.secondary:hover {
  background: #000;
  color: #fff;
}

.hero-image {
  position: relative;
  width: 100%;
  aspect-ratio: 4/5;
  overflow: hidden;
  border-radius: 2rem;
}

.hero-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.hero-image:hover img {
  transform: scale(1.05);
}

@media (max-width: 1024px) {
  .hero-content {
    grid-template-columns: 1fr;
    text-align: center;
    gap: 3rem;
  }

  .hero-text {
    align-items: center;
  }

  .hero-subheading {
    margin: 0 auto;
  }

  .hero-cta {
    justify-content: center;
  }
}

@media (max-width: 768px) {
  .hero-section {
    padding: 2rem 1rem;
  }
  
  .hero-text {
    gap: 2rem;
  }
  
  .urdu-text {
    font-size: clamp(3.5rem, 10vw, 7rem);
  }
  
  .hero-subheading {
    font-size: clamp(1.5rem, 2.5vw, 2rem);
  }
  
  .hero-cta {
    flex-direction: column;
    width: 100%;
  }
  
  .cta-button {
    width: 100%;
    text-align: center;
  }
}

/* Tablet */
@media screen and (min-width: 768px) and (max-width: 1024px) {
  .hero-section {
    padding: 3rem 2rem;
  }
  
  .hero-content {
    padding: 0 2rem;
  }
}

/* Mobile */
@media screen and (max-width: 767px) {
  .hero-section {
    padding: 1rem;
  }
  
  .hero-content {
    padding: 0 1rem;
  }
  
  .hero-heading {
    gap: 0.25rem;
  }
  
  .urdu-text {
    margin-top: 0.25rem;
  }
  
  .hero-subheading {
    margin: 1rem auto;
  }
  
  .cta-button {
    width: 100%;
    max-width: 300px;
  }
}
</style> 