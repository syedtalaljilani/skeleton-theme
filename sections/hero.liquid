{%- style -%}
  .hero {
    min-height: 100vh;
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: linear-gradient(
      45deg,
      #f3f3f3,
      #e6e6e6,
      #d9d9d9,
      #cccccc,
      #bfbfbf
    );
    background-size: 400% 400%;
    animation: gradient 15s ease infinite;
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .hero__content {
    text-align: center;
    padding: 2rem;
    max-width: 1200px;
    width: 100%;
    z-index: 1;
  }

  .hero__title {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 700;
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    line-height: 1.1;
  }

  .hero__title-urdu {
    font-family: 'Noto Nastaliq Urdu', serif;
    font-size: clamp(4rem, 10vw, 8rem);
    line-height: 1.2;
  }

  .hero__subtitle {
    font-size: clamp(1.25rem, 3vw, 2rem);
    color: #666;
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero__cta {
    display: inline-block;
    padding: 1.25rem 3rem;
    background: #000;
    color: #fff;
    text-decoration: none;
    font-weight: 500;
    font-size: 1.125rem;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .hero__cta:hover {
    transform: translateY(-2px);
    background: transparent;
    border-color: #000;
    color: #000;
  }

  @media (max-width: 768px) {
    .hero__content {
      padding: 1rem;
    }
    
    .hero__subtitle {
      margin-bottom: 2rem;
    }
  }
{%- endstyle -%}

<div class="hero">
  <div class="hero__content">
    <h1 class="hero__title">
      <span class="hero__title-urdu">فیصلہ</span>
      <span>Faesle</span>
    </h1>
    <p class="hero__subtitle">Decisions in oversized streetwear</p>
    <a href="/collections/all" class="hero__cta">Shop Collection</a>
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "settings": []
}
{% endschema %} 