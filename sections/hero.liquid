{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to"
    },
    {
      "type": "text",
      "id": "urdu_text",
      "label": "Urdu Text",
      "default": "فیصلہ"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our collection of premium products"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}

<div class="hero-section">
  <div class="hero-content">
    <div class="hero-text">
      <div class="hero-heading">
        <span class="urdu-text">{{ section.settings.heading }}</span>
        <span class="urdu-text">{{ section.settings.urdu_text }}</span>
      </div>
      <p class="hero-subheading">{{ section.settings.subheading }}</p>
      <div class="hero-cta">
        <a href="/collections/all" class="cta-button">
          <span>{{ section.settings.cta_text }}</span>
        </a>
        <a href="/pages/about" class="cta-button">
          <span>Learn More</span>
        </a>
      </div>
    </div>
    <div class="hero-image">
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 2000 | image_tag }}
      {% endif %}
    </div>
  </div>
</div>

<style>
html, body {
  margin: 0 !important;
  padding: 0 !important;
  box-sizing: border-box;
}

.hero-section {
  position: relative;
  min-height: 100vh;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0;
  background: #fff;
  overflow: hidden;
}

.hero-content {
  position: relative;
  width: 100%;
  max-width: 1600px;
  margin: 0 auto;
  padding: 0 2rem;
  display: grid;
  grid-template-columns: 1.2fr 0.8fr;
  gap: 0;
  align-items: center;
}

.hero-text {
  position: relative;
  z-index: 2;
  padding-right: 4rem;
}

.hero-heading {
  position: relative;
  margin-bottom: 4rem;
}

.urdu-text {
  font-family: var(--font-primary);
  font-size: clamp(6rem, 15vw, 12rem);
  line-height: 0.85;
  display: block;
  color: #000;
  position: relative;
  transform: translateX(-2rem);
}

.urdu-text:first-child {
  color: #f0f0f0;
  -webkit-text-stroke: 1px #000;
}

.hero-subheading {
  font-family: var(--font-primary);
  font-size: clamp(1.5rem, 2vw, 2rem);
  line-height: 1.4;
  color: #333;
  max-width: 500px;
  margin-left: 2rem;
  position: relative;
}

.hero-subheading::before {
  content: '';
  position: absolute;
  left: -2rem;
  top: 50%;
  width: 1.5rem;
  height: 1px;
  background: #000;
}

.hero-cta {
  display: flex;
  gap: 2rem;
  margin-left: 2rem;
  margin-top: 3rem;
}

.cta-button {
  font-family: var(--font-secondary);
  display: inline-flex;
  align-items: center;
  padding: 1.25rem 2.5rem;
  background: #000;
  color: #fff;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 1px solid #000;
  position: relative;
  overflow: hidden;
}

.cta-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  transform: translateX(-100%);
  transition: transform 0.3s ease;
}

.cta-button:hover::before {
  transform: translateX(0);
}

.cta-button span {
  position: relative;
  z-index: 1;
}

.cta-button:hover span {
  color: #000;
}

.hero-image {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.hero-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  transition: transform 0.5s ease;
}

.hero-image::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, #fff 0%, transparent 20%);
}

@media (max-width: 1200px) {
  .hero-content {
    grid-template-columns: 1fr;
    padding: 4rem 2rem;
  }

  .hero-text {
    padding-right: 0;
    margin-bottom: 2rem;
  }

  .hero-image {
    height: 60vh;
  }

  .hero-image::after {
    background: linear-gradient(to bottom, #fff 0%, transparent 20%);
  }
}

@media (max-width: 768px) {
  .hero-section {
    padding: 2rem 0;
  }

  .hero-content {
    padding: 2rem 1rem;
  }

  .hero-text {
    text-align: center;
  }

  .urdu-text {
    transform: translateX(0);
  }

  .hero-subheading {
    margin: 0 auto;
  }

  .hero-subheading::before {
    display: none;
  }

  .hero-cta {
    margin: 2rem auto 0;
    justify-content: center;
  }

  .hero-image {
    height: 50vh;
  }
}

/* Tablet */
@media screen and (min-width: 768px) and (max-width: 1024px) {
  .hero-section {
    padding: 3rem 2rem;
  }
  
  .hero-content {
    padding: 0 2rem;
  }
}

/* Mobile */
@media screen and (max-width: 767px) {
  .hero-section {
    padding: 1rem;
  }
  
  .hero-content {
    padding: 0 1rem;
  }
  
  .hero-heading {
    gap: 0.25rem;
  }
  
  .urdu-text {
    margin-top: 0.25rem;
  }
  
  .hero-subheading {
    margin: 1rem auto;
  }
  
  .cta-button {
    width: 100%;
    max-width: 300px;
  }
}
</style> 