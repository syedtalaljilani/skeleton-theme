{%- style -%}
.featured-products {
  padding: 8rem 2rem;
  max-width: 1600px;
  margin: 0 auto;
  background: linear-gradient(180deg, #000 0%, #111 50%, #000 100%);
  color: #fff;
  position: relative;
  overflow: hidden;
}

.featured-products__header {
  text-align: center;
  margin-bottom: 5rem;
}

.featured-products__title {
  font-size: clamp(2.5rem, 6vw, 4rem);
  font-weight: 800;
  margin-bottom: 1.5rem;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  background: linear-gradient(to right, #fff, #aaa);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 2px 10px rgba(255,255,255,0.1);
}

.featured-products__subtitle {
  font-size: 1.4rem;
  color: #ccc;
  max-width: 700px;
  margin: 0 auto;
  line-height: 1.6;
  font-weight: 300;
}

.featured-products__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 3rem;
}

.product-card {
  position: relative;
  overflow: hidden;
  background: #111;
  border-radius: 16px;
  transition: transform 0.5s ease, box-shadow 0.5s ease;
  box-shadow: 0 6px 24px rgba(0,0,0,0.4);
  display: flex;
  flex-direction: column;
}

.product-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 12px 36px rgba(255,255,255,0.08);
}

.product-card__image-wrapper {
  position: relative;
  padding-bottom: 125%;
  overflow: hidden;
  border-radius: 16px 16px 0 0;
  background: #000;
}

.product-card__image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.8s ease;
  display: block;
}

.product-card:hover .product-card__image {
  transform: scale(1.1);
}

.product-card__info {
  padding: 2rem;
  background: #111;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-card__title {
  font-weight: 600;
  font-size: 1.4rem;
  margin-bottom: 0.75rem;
  color: #fff;
}

.product-card__title a {
  color: inherit;
  text-decoration: none;
  transition: color 0.3s ease;
}

.product-card__title a:hover {
  color: #ccc;
}

.product-card__price {
  color: #fff;
  font-size: 1.25rem;
  font-weight: 500;
  margin-bottom: 1.5rem;
}

.product-card__quick-add {
  display: inline-block;
  background: #fff;
  color: #000;
  padding: 1rem 2rem;
  font-weight: 600;
  text-align: center;
  text-transform: uppercase;
  border-radius: 50px;
  font-size: 0.9rem;
  letter-spacing: 0.08em;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.product-card__quick-add:hover {
  background: #000;
  color: #fff;
  border: 1px solid #fff;
}

.new-badge, .limited-badge {
  position: absolute;
  top: 1.2rem;
  left: 1.2rem;
  background: rgba(255,255,255,0.9);
  color: #000;
  padding: 0.5rem 1rem;
  font-size: 0.75rem;
  font-weight: 700;
  border-radius: 40px;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  box-shadow: 0 4px 15px rgba(0,0,0,0.2);
  z-index: 2;
}

.limited-badge {
  left: auto;
  right: 1.2rem;
  background: #ff3b3b;
  color: #fff;
  box-shadow: 0 4px 15px rgba(255,59,59,0.3);
}

@media (max-width: 768px) {
  .featured-products {
    padding: 6rem 1rem;
  }

  .featured-products__title {
    font-size: 2.5rem;
  }

  .featured-products__subtitle {
    font-size: 1.2rem;
  }

  .product-card__quick-add {
    padding: 0.75rem 1.5rem;
    font-size: 0.8rem;
  }

  .new-badge, .limited-badge {
    padding: 0.4rem 0.8rem;
    font-size: 0.7rem;
  }
}
{%- endstyle -%}

<div class="featured-products">
  <div class="featured-products__header">
    <h2 class="featured-products__title">New Arrivals</h2>
    <p class="featured-products__subtitle">Experience luxury in every thread. Limited edition oversized t-shirts crafted for those who appreciate exceptional quality.</p>
  </div>

  <div class="featured-products__grid">
    {% for product in collections[section.settings.collection].products limit: section.settings.products_to_show %}
      <div class="product-card">
        {% if forloop.first %}
          <span class="new-badge">New</span>
        {% endif %}
        {% if forloop.index <= 2 %}
          <span class="limited-badge">Limited</span>
        {% endif %}
        <a href="{{ product.url }}" class="product-card__image-wrapper">
          {% if product.featured_image %}
            <img 
              src="{{ product.featured_image | img_url: '800x' }}"
              srcset="{{ product.featured_image | img_url: '400x' }} 400w,
                      {{ product.featured_image | img_url: '600x' }} 600w,
                      {{ product.featured_image | img_url: '800x' }} 800w"
              sizes="(max-width: 400px) 400px,
                     (max-width: 600px) 600px,
                     800px"
              alt="{{ product.title }}"
              class="product-card__image"
              loading="lazy"
              width="800"
              height="1000"
            >
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'product-card__image' }}
          {% endif %}
        </a>
        
        <div class="product-card__info">
          <div>
            <h3 class="product-card__title">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>
            <p class="product-card__price">{{ product.price | money }}</p>
          </div>
          <button 
            class="product-card__quick-add"
            data-quick-add
            data-variant-id="{{ product.selected_or_first_available_variant.id }}"
          >
            Quick Add
          </button>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<script>
  class QuickAdd {
    constructor() {
      this.buttons = document.querySelectorAll('[data-quick-add]');
      this.init();
    }

    init() {
      this.buttons.forEach(button => {
        button.addEventListener('click', this.handleClick.bind(this));
      });
    }

    async handleClick(event) {
      const button = event.target;
      const variantId = button.dataset.variantId;

      try {
        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            id: variantId,
            quantity: 1
          })
        });

        if (response.ok) {
          window.location.reload();
        }
      } catch (error) {
        console.error('Error adding to cart:', error);
      }
    }
  }

  new QuickAdd();
</script>

{% schema %}
{
  "name": "New Arrivals",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 2,
      "default": 6,
      "label": "Number of products to show"
    }
  ],
  "presets": [
    {
      "name": "New Arrivals",
      "category": "Product"
    }
  ]
}
{% endschema %}
