{%- style -%}
  .featured-products {
    padding: 6rem 2rem;
    max-width: 1600px;
    margin: 0 auto;
    background: #000;
    color: #fff;
  }

  .featured-products__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .featured-products__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .featured-products__subtitle {
    font-size: 1.25rem;
    color: #ccc;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
  }

  .product-card {
    position: relative;
    overflow: hidden;
    background: #111;
    border-radius: 8px;
    transition: transform 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-10px);
  }

  .product-card__image-wrapper {
    position: relative;
    padding-bottom: 125%;
    overflow: hidden;
    border-radius: 8px 8px 0 0;
  }

  .product-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .product-card:hover .product-card__image {
    transform: scale(1.1);
  }

  .product-card__info {
    padding: 1.5rem;
    position: relative;
  }

  .product-card__title {
    font-weight: 500;
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: #fff;
  }

  .product-card__title a {
    color: #fff;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .product-card__title a:hover {
    color: #ccc;
  }

  .product-card__price {
    color: #ccc;
    font-size: 1.125rem;
  }

  .product-card__quick-add {
    position: absolute;
    bottom: 1.5rem;
    right: 1.5rem;
    background: #fff;
    color: #000;
    padding: 0.75rem 1.5rem;
    border: none;
    font-weight: 600;
    cursor: pointer;
    opacity: 0;
    transition: all 0.3s ease;
    border-radius: 50px;
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
  }

  .product-card:hover .product-card__quick-add {
    opacity: 1;
  }

  .product-card__quick-add:hover {
    background: #000;
    color: #fff;
    border: 1px solid #fff;
  }

  .new-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: #fff;
    color: #000;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: 50px;
    z-index: 2;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    .featured-products {
      padding: 4rem 1rem;
    }

    .featured-products__title {
      font-size: 2rem;
    }

    .featured-products__subtitle {
      font-size: 1rem;
    }

    .product-card__quick-add {
      opacity: 1;
      bottom: 1rem;
      right: 1rem;
      padding: 0.5rem 1rem;
      font-size: 0.75rem;
    }
  }
{%- endstyle -%}

<div class="featured-products">
  <div class="featured-products__header">
    <h2 class="featured-products__title">New Arrivals</h2>
    <p class="featured-products__subtitle">Discover our latest collection of premium oversized t-shirts</p>
  </div>

  <div class="featured-products__grid">
    {% for product in collections[section.settings.collection].products limit: section.settings.products_to_show %}
      <div class="product-card">
        <span class="new-badge">New</span>
        <a href="{{ product.url }}" class="product-card__image-wrapper">
          <img 
            src="{{ product.featured_image | img_url: '800x' }}" 
            alt="{{ product.title }}"
            class="product-card__image"
            loading="lazy"
            width="800"
            height="1000"
          >
        </a>
        
        <div class="product-card__info">
          <h3 class="product-card__title">
            <a href="{{ product.url }}">{{ product.title }}</a>
          </h3>
          <p class="product-card__price">{{ product.price | money }}</p>
        </div>

        <button 
          class="product-card__quick-add"
          data-quick-add
          data-variant-id="{{ product.selected_or_first_available_variant.id }}"
        >
          Quick Add
        </button>
      </div>
    {% endfor %}
  </div>
</div>

<script>
  class QuickAdd {
    constructor() {
      this.buttons = document.querySelectorAll('[data-quick-add]');
      this.init();
    }

    init() {
      this.buttons.forEach(button => {
        button.addEventListener('click', this.handleClick.bind(this));
      });
    }

    async handleClick(event) {
      const button = event.target;
      const variantId = button.dataset.variantId;

      try {
        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            id: variantId,
            quantity: 1
          })
        });

        if (response.ok) {
          window.location.reload();
        }
      } catch (error) {
        console.error('Error adding to cart:', error);
      }
    }
  }

  new QuickAdd();
</script>

{% schema %}
{
  "name": "New Arrivals",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 2,
      "default": 6,
      "label": "Number of products to show"
    }
  ],
  "presets": [
    {
      "name": "New Arrivals",
      "category": "Product"
    }
  ]
}
{% endschema %} 