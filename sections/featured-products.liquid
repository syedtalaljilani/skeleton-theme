{%- style -%}
  .featured-products {
    padding: 4rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .featured-products__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .featured-products__title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .product-card {
    position: relative;
    overflow: hidden;
  }

  .product-card__image-wrapper {
    position: relative;
    padding-bottom: 125%;
    overflow: hidden;
  }

  .product-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-card:hover .product-card__image {
    transform: scale(1.05);
  }

  .product-card__info {
    padding: 1rem 0;
  }

  .product-card__title {
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .product-card__price {
    color: #666;
  }

  .product-card__quick-add {
    position: absolute;
    bottom: 1rem;
    left: 50%;
    transform: translateX(-50%);
    background: #fff;
    color: #000;
    padding: 0.75rem 1.5rem;
    border: none;
    font-weight: 500;
    cursor: pointer;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .product-card:hover .product-card__quick-add {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .featured-products {
      padding: 2rem 1rem;
    }

    .featured-products__title {
      font-size: 1.5rem;
    }

    .product-card__quick-add {
      opacity: 1;
    }
  }
{%- endstyle -%}

<div class="featured-products">
  <div class="featured-products__header">
    <h2 class="featured-products__title">Featured Collection</h2>
  </div>

  <div class="featured-products__grid">
    {% for product in collections[section.settings.collection].products limit: section.settings.products_to_show %}
      <div class="product-card">
        <a href="{{ product.url }}" class="product-card__image-wrapper">
          <img 
            src="{{ product.featured_image | img_url: '600x' }}" 
            alt="{{ product.title }}"
            class="product-card__image"
            loading="lazy"
          >
        </a>
        
        <div class="product-card__info">
          <h3 class="product-card__title">
            <a href="{{ product.url }}">{{ product.title }}</a>
          </h3>
          <p class="product-card__price">{{ product.price | money }}</p>
        </div>

        <button 
          class="product-card__quick-add"
          data-quick-add
          data-variant-id="{{ product.selected_or_first_available_variant.id }}"
        >
          Quick Add
        </button>
      </div>
    {% endfor %}
  </div>
</div>

<script>
  class QuickAdd {
    constructor() {
      this.buttons = document.querySelectorAll('[data-quick-add]');
      this.init();
    }

    init() {
      this.buttons.forEach(button => {
        button.addEventListener('click', this.handleClick.bind(this));
      });
    }

    async handleClick(event) {
      const button = event.target;
      const variantId = button.dataset.variantId;

      try {
        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            id: variantId,
            quantity: 1
          })
        });

        if (response.ok) {
          window.location.reload();
        }
      } catch (error) {
        console.error('Error adding to cart:', error);
      }
    }
  }

  new QuickAdd();
</script>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 2,
      "default": 6,
      "label": "Number of products to show"
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "category": "Product"
    }
  ]
}
{% endschema %} 