{%- style -%}
  .footer {
    background: #000;
    color: #fff;
    padding: 4rem 2rem;
  }

  .footer__wrapper {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
  }

  .footer__brand {
    margin-bottom: 1rem;
  }

  .footer__logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: #fff;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .footer__logo-urdu {
    font-family: 'Noto Nastaliq Urdu', serif;
  }

  .footer__description {
    color: #999;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .footer__social {
    display: flex;
    gap: 1rem;
  }

  .footer__social-link {
    color: #fff;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .footer__social-link:hover {
    opacity: 1;
  }

  .footer__heading {
    font-size: 1rem;
    font-weight: 500;
    margin-bottom: 1rem;
    color: #fff;
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__link {
    margin-bottom: 0.5rem;
  }

  .footer__link a {
    color: #999;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer__link a:hover {
    color: #fff;
  }

  .footer__bottom {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
    color: #999;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 3rem 1rem;
    }

    .footer__wrapper {
      gap: 2rem;
    }
  }
{%- endstyle -%}

