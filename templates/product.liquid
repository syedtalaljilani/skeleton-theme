  background: rgba(255,255,255,0.1);
  color: #fff;
  border: 1px solid rgba(255,255,255,0.2);
  padding: 0.8rem 1rem;
  border-radius: 8px;
  margin-top: 0.5rem;
  font-size: 1rem;
  font-weight: 500;
  outline: none;
  transition: border 0.2s;
  width: 100%;
  max-width: 300px;
}

.option-modern select:focus, .quantity-modern input[type="number"]:focus {
  border: 1px solid rgba(255,255,255,0.5);
}

