  display: flex;
  align-items: center;
  gap: 0.5rem;
  max-width: 150px;
  margin-top: 0.5rem;
}

.qty-btn {
  background: #222;
  color: #fff;
  border: none;
  border-radius: 6px;
  width: 36px;
  height: 36px;
  font-size: 1.2rem;
  cursor: pointer;
  transition: background 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qty-btn:hover {
  background: #444;
}

#product-qty {
  flex: 1;
  text-align: center;
  min-width: 60px;
}

.product-actions {
  margin-top: 1rem;
}

.add-to-cart-modern {
  display: inline-block;
  padding: 1rem 2.5rem;
  background: #000;
  color: #fff;
  font-size: 1.1rem;
  font-weight: 700;
  text-decoration: none;
  border-radius: 50px;
  border: 2px solid #fff;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(.4,2,.6,1);
  box-shadow: 0 2px 8px rgba(255,255,255,0.08);
  position: relative;
  overflow: hidden;
  min-width: 200px;
}

.add-to-cart-modern:hover {
  background: #fff;
  color: #000;
  border: 2px solid #fff;
  transform: translateY(-2px) scale(1.03);
}

.add-to-cart-modern:active {
  background: #000;
  color: #fff;
  border: 2px solid #fff;
}

.add-to-cart-modern.loading .btn-text {
  opacity: 0;
}

.add-to-cart-modern.loading .btn-loading {
  opacity: 1;
}

.btn-loading {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
}

.spinner {
  animation: rotate 2s linear infinite;
  width: 24px;
  height: 24px;
}

.path {
  stroke: #ffffff;
  stroke-linecap: round;
  animation: dash 1.5s ease-in-out infinite;
}

@keyframes rotate {
  100% {
    transform: rotate(360deg);
  }
}

@keyframes dash {
  0% {
    stroke-dasharray: 1, 150;
    stroke-dashoffset: 0;
  }
  50% {
    stroke-dasharray: 90, 150;
    stroke-dashoffset: -35;
  }
  100% {
    stroke-dasharray: 90, 150;
    stroke-dashoffset: -124;
  }
}

.form-feedback {
  margin-top: 1rem;
  padding: 1rem;
  border-radius: 8px;
  font-weight: 500;
  display: none;
}

