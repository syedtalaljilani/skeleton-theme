}

.product-price-wrapper {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 2rem;
}

.product-price-modern {
  font-size: 2rem;
  font-weight: 700;
  color: #fff;
  background: #111;
  border-radius: 8px;
  padding: 0.5rem 1.5rem;
  display: inline-block;
  box-shadow: 0 2px 8px rgba(255,255,255,0.08);
}

.compare-at-price {
  font-size: 1.2rem;
